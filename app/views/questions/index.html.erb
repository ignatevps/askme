<div class="container">
  <p class="mt">
    <%= link_to "Create new question", new_question_path, class: 'button button-main' %>
  </p>

  <div class="mt">
    <%= render 'form', question: @question %>
  </div>
</div>

<div class="container mt-sm">
  <h2 class="title-lg">
  <%= @questions.count %>
  <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
  </h2>
</div>

<% @questions.each do |question| %>
  <div class="mt-sm container">
    <%= render question %>
  </div>
<% end %> 